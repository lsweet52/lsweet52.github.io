<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhangxf.mapper.ClazzMapper">

<!--查询所有班级-->
    <select id="getAllClazz" resultType="com.zhangxf.pojo.Clazz">
        select c.*, e.name as masterName
        from clazz c left join emp e on c.master_id = e.id
            <where>
                <if test="name != null and name != ''">
                    c.name like concat(%, #{name}, %)
                </if>
                <if test="begin != null and end != null">
                    and c.end_date between #{begin} and #{end}
                </if>
            </where>
        order by c.update_time desc
    </select>
</mapper>